<!--
  This should be kept identical to activity_medium_short_interstitial, except this is a *horizontal*
  layout.
  -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_medium_interstitial"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <WebView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/medium_webview_1"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <WebView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/medium_webview_2"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <WebView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/medium_webview_3"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

    <WebView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/medium_webview_4"
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>
