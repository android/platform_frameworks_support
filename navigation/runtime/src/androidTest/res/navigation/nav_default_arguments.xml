<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@+id/start_test">

    <test android:id="@+id/start_test">
        <argument
            android:name="test_int"
            android:defaultValue="12" />
        <argument
            android:name="test_int2"
            android:defaultValue="@integer/test_integer_arg"
            app:argType="integer" />

        <argument
            android:name="test_dimen"
            android:defaultValue="@dimen/test_dimen_arg" />
        <argument
            android:name="test_dimen2"
            android:defaultValue="@dimen/test_dimen_arg"
            app:argType="integer" />
        <argument
            android:name="test_dimen3"
            android:defaultValue="@dimen/test_dimen_arg"
            app:argType="reference" />

        <argument
            android:name="test_color"
            android:defaultValue="@color/test_color_arg" />

        <argument
            android:name="test_float"
            android:defaultValue="3.14" />

        <argument
            android:name="test_reference"
            android:defaultValue="@style/AppTheme" />
        <argument
            android:name="test_reference2"
            android:defaultValue="@dimen/test_dimen_arg"
            app:argType="reference" />
        <argument
            android:name="test_reference3"
            android:defaultValue="@integer/test_integer_arg"
            app:argType="reference" />
        <argument
            android:name="test_reference4"
            android:defaultValue="@string/test_string_arg"
            app:argType="reference" />
        <argument
            android:name="test_reference5"
            android:defaultValue="@bool/test_bool_arg"
            app:argType="reference" />

        <argument
            android:name="test_boolean"
            android:defaultValue="true" />
        <argument
            android:name="test_boolean2"
            android:defaultValue="false" />
        <argument
            android:name="test_boolean3"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="test_boolean4"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="test_boolean5"
            android:defaultValue="@bool/test_bool_arg" />

        <argument
            android:name="test_string"
            android:defaultValue="abc" />
        <argument
            android:name="test_string2"
            android:defaultValue="true"
            app:argType="string" />
        <argument
            android:name="test_string3"
            android:defaultValue="123L"
            app:argType="string" />
        <argument
            android:name="test_string4"
            android:defaultValue="123"
            app:argType="string" />
        <argument
            android:name="test_string5"
            android:defaultValue="@string/test_string_arg"
            app:argType="string" />
        <argument
            android:name="test_string6"
            android:defaultValue="@string/test_string_arg" />
        <argument
            android:name="test_string_no_default"
            app:argType="string" />

        <argument
            android:name="test_long"
            android:defaultValue="456789013456L"
            app:argType="long" />
        <argument
            android:name="test_long2"
            android:defaultValue="456789013456L" />
        <argument
            android:name="test_long3"
            android:defaultValue="123L" />

        <argument
            android:name="test_enum"
            android:defaultValue="VALUE_ONE"
            app:argType="androidx.navigation.test.TestEnum" />
        <argument
            android:name="test_relative_classname"
            android:defaultValue="VALUE_TWO"
            app:argType=".TestEnum" />

        <action
            android:id="@+id/my_action"
            app:destination="@+id/start_test">
            <argument
                android:name="test_action_arg"
                android:defaultValue="123L" />
        </action>
    </test>
</navigation>
